{%- if post and post != empty -%}
  <div class="insta-image">
  <img
    src="{{ post.image.src | image_url }}"
    loading="eager"
    alt="{{ post.title }}"
  >
    </div>
{%- endif -%}

<script>
  var currentSection = document.currentScript.closest('.shopify-section');currentSection.setAttribute("class","insta-image");
</script>
