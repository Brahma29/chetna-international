
          <a href="#" class="link-block-4 w-inline-block">
            <div class="product-image shopcard-img">{%- if section.settings.product_img_image == nil -%}<img loading="lazy" src="https://d3e54v103j8qbb.cloudfront.net/plugins/Basic/assets/placeholder.60f9b1840c.svg" alt="" class="product-img">{%- else -%}<img loading="lazy" src="{{ section.settings.product_img_image.src | img_url: 'master' }}" alt="{{ section.settings.product_img_image.alt | escape }}" class="product-img">{%- endif -%}</div>
          </a>
          <div class="product-details shopcard-details">
            <div class="product-category">{{ section.settings.product_category }}</div>
            <a href="#" class="link-block-3 w-inline-block">
              <h2 class="product-name-slider">{{ section.settings.product_name }}</h2>
            </a>
            <div class="text-wrapper justify-start">
              <div class="text-wrapper">
                <div class="product-price hide">{{ 't20b9' | t }}</div>
                <div data-commerce-type="variation-price" class="product-price">{{ section.settings.product_price }}</div>
              </div>
              <div class="text-wrapper">
                <div class="product-original-price hide">{{ 't20b9' | t }}</div>
                <div class="product-original-price">{{ section.settings.product_compare_at_price }}</div>
              </div>
            </div>
            <a href="{% if section.settings.product_link %}{{ section.settings.product_link }}{% else %}#{% endif %}" class="btn bg-cart-btn cursor-auto w-button">{{ section.settings.button_text }}</a>
          </div>
        

<script>var currentSection = document.currentScript.closest('.shopify-section');currentSection.setAttribute("class","product-card shop-card");</script>
        
{% schema %}
{
  "name": "Shop Card",
  "tag": "div",
  "class": "product-card shop-card",
  "settings": [
    {
      "id": "product_link",
      "label": "Product Link",
      "type": "url"
    },
    {
      "type": "richtext",
      "id": "product_compare_at_price",
      "label": "Product Compare At Price",
      "default": "<p>Text Area</p>"
    },
    {
      "type": "richtext",
      "id": "product_price",
      "label": "Product Price",
      "default": "<p>Text Area</p>"
    },
    {
      "type": "text",
      "id": "product_name",
      "label": "Product Name",
      "default": "Heading"
    },
    {
      "type": "richtext",
      "id": "product_category",
      "label": "Product Category",
      "default": "<p>Text Area</p>"
    },
    {
      "type": "image_picker",
      "id": "product_img_image",
      "label": "product-img - Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Buy Now"
    }
  ]
}
{% endschema %}